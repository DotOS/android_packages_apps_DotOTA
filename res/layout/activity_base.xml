<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.dot.systemupdates.baseActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dotOS_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_marginBottom="14dp"
                android:layout_marginStart="14dp"
                android:elevation="3dp"
                android:text="DotOS Version"
                android:textAlignment="center"
                android:textColor="?attr/colorPrimary"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/show_more"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="37dp"
                android:animateLayoutChanges="true"
                android:background="?android:selectableItemBackgroundBorderless"
                android:clickable="true"
                android:elevation="3dp"
                android:tint="?android:attr/colorPrimary"
                android:src="@drawable/ic_expand_more"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/base"
                tools:ignore="ContentDescription"/>

            <com.dot.systemupdates.views.ExpandableLayout
                android:id="@+id/update_info"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/show_more"
                android:layout_marginEnd="8dp"
                android:layout_toLeftOf="@+id/show_more"
                android:animateLayoutChanges="true"
                android:elevation="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <include
                        layout="@layout/updates_preferences"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="5dp" />
                </LinearLayout>
            </com.dot.systemupdates.views.ExpandableLayout>

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/show_more"
                android:layout_marginStart="14dp"
                android:animateLayoutChanges="true"
                android:background="?android:selectableItemBackgroundBorderless"
                android:clickable="true"
                android:tint="?android:attr/colorPrimary"
                android:src="@drawable/ic_back"
                tools:ignore="ContentDescription"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/scroll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/check_updates"
        android:layout_below="@+id/toolbar_container"
        android:layout_marginBottom="14dp"
        android:elevation="1dp"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/update_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="NEW_VERSION"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/size_mb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/update_version"
                android:layout_below="@+id/update_version"
                android:text="SIZE_MB"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/size_mb"
                android:padding="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/new_changes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:text="UPDATE_CHANGELOG" />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/check_updates"
        style="@style/Widget.Design.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="14dp"
        android:clickable="true"
        android:src="@drawable/ic_refresh"
        app:fabSize="normal" />

    <RelativeLayout
        android:id="@+id/no_updates"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/up_to_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="298dp"
            android:text="Your System is up to date"
            android:textSize="16sp" />

        <Button
            android:id="@+id/v_changelog"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/up_to_date"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:text="View Changelog" />

    </RelativeLayout>

</RelativeLayout>
